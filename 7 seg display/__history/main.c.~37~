#include <main.h>

#byte portc=7

void main()
{
   set_tris_a(0x00);
   set_tris_c(0x00);
   setup_psp(psp_disabled);
   setup_ccp1(ccp_off);
   setup_ccp2(ccp_off);
   setup_timer_1(t1_disabled);
   setup_timer_2(t2_disabled,0,1);
   setup_adc_ports(no_analogs);
   setup_adc(adc_off);
  const int dizi[16]={0x3f,0x06,0x5b,0x4f,0x66,0x6d,0x7c,0x07,0x7f,0x6f,0x77,0x7c,0x39,0x5e,0x79,0x71};

  output_b(0x00);
  output_high(pin_d0);
   while(TRUE)
   {
   for(int i=0;i<=15;i++)
   {
   output_b(dizi[i]);
   delay_ms(200);
   }
   }

}
